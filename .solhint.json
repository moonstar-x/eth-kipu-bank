{
  "rules": {
    "code-complexity": ["warn", 7],
    "explicit-types": ["error", "explicit"],
    "function-max-lines": ["warn", 50],
    "max-line-length": ["warn", 120],
    "max-states-count": ["warn", 15],
    "no-console": "error",
    "no-empty-blocks": "error",
    "no-global-import": "error",
    "no-unused-import": "error",
    "no-unused-vars": ["error", {
      "validateParameters": true
    }],
    "one-contract-per-file": "error",
    "payable-fallback": "error",
    "reason-string": ["warn", {
      "maxLength": 32
    }],
    "use-natspec": ["error", {
      "title": {
        "enabled": true,
        "ignore": {}
      },
      "author": {
        "enabled": true,
        "ignore": {}
      },
      "notice": {
        "enabled": true,
        "ignore": {}
      },
      "param": {
        "enabled": true,
        "ignore": {}
      },
      "return": {
        "enabled": true,
        "ignore": {}
      }
    }],
    "constructor-syntax": "error",

    "interface-starts-with-i": "error",
    "duplicated-imports": "error",
    "const-name-snakecase": "error",
    "contract-name-capwords": "error",
    "event-name-capwords": "error",
    "foundry-test-functions": "off",
    "func-name-mixedcase": "error",
    "func-named-parameters": ["warn", 4],
    "func-param-name-mixedcase": "error",
    "immutable-vars-naming": "off",
    "modifier-name-mixedcase": "error",
    "named-parameters-mapping": "error",
    "private-vars-leading-underscore": "off",
    "use-forbidden-name": "error",
    "var-name-mixedcase": "off",
    "imports-on-top": "error",
    "imports-order": "error",
    "ordering": "error",
    "visibility-modifier-order": "error",

    "gas-calldata-parameters": "error",
    "gas-custom-errors": "error",
    "gas-increment-by-one": "error",
    "gas-indexed-events": "error",
    "gas-length-in-loops": "error",
    "gas-multitoken1155": "warn",
    "gas-named-return-values": "error",
    "gas-small-strings": "warn",
    "gas-strict-inequalities": "error",
    "gas-struct-packing": "warn",

    "comprehensive-interface": "error",
    "import-path-check": "error",
    "quotes": ["error", "double"],

    "avoid-call-value": "error",
    "avoid-low-level-calls": "error",
    "avoid-sha3": "error",
    "avoid-suicide": "error",
    "avoid-throw": "error",
    "avoid-tx-origin": "error",
    "check-send-result": "error",
    "compiler-version": ["error", "^0.8.24"],
    "func-visibility": ["error", {
      "ignoreConstructors": true
    }],
    "multiple-sends": "error",
    "no-complex-fallback": "error",
    "no-inline-assembly": "error",
    "not-rely-on-block-hash": "error",
    "not-rely-on-time": "off",
    "reentrancy": "error",
    "state-visibility": "error"
  }
}