{
  "name": "eth-kipu-bank",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "hardhat build",
    "test": "hardhat test",
    "test:solidity": "hardhat test solidity",
    "test:ts": "hardhat test nodejs",
    "lint": "eslint . && solhint 'contracts/**/*.sol'",
    "lint:fix": "eslint . --fix && solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --check contracts",
    "format:fix": "prettier --write contracts",
    "deploy:sepolia": "hardhat ignition deploy ignition/modules/KipuBank.ts --network sepolia",
    "verify:sepolia": "hardhat run --build-profile production --network sepolia scripts/verify.ts"
  },
  "engines": {
    "node": ">= 22.10"
  },
  "devDependencies": {
    "@moonstar-x/eslint-config": "^1.0.0",
    "@moonstar-x/logger": "^1.0.1",
    "@nomicfoundation/hardhat-ignition": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^3.0.0",
    "@types/node": "^22.18.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.1",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "typescript": "~5.8.0",
    "viem": "^2.35.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0"
  }
}
